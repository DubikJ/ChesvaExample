<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

    <ImageView
        android:id="@+id/iv_language"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="EN"
        tools:src="@drawable/ic_united_kingdom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_language"
        app:layout_constraintLeft_toRightOf="@+id/iv_language"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_language"
        style="@style/TextStyle_Standart_Accent" />

</androidx.constraintlayout.widget.ConstraintLayout>