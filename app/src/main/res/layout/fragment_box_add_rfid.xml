<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/powerRfidContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvRfidName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:text="@string/rfid_power_name_short"
            style="@style/TextStyle_Standart_Grey"
            app:layout_constraintBottom_toBottomOf="@+id/seekPowerScanner"
            app:layout_constraintStart_toStartOf="@+id/seekPowerScanner"
            app:layout_constraintEnd_toEndOf="@+id/seekPowerScanner"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekPowerScanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_ticks_count="2"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="@dimen/text_size_middle"
            app:isb_tick_texts_color="@color/colorGrey"
            app:isb_thumb_color="@color/colorPrimary"
            app:isb_thumb_size="20dp"
            app:isb_thumb_drawable="@drawable/seek_bap_thumb"
            app:isb_track_rounded_corners="true"
            app:isb_track_background_color="@color/colorPrimary"
            app:isb_track_background_size="5dp"
            app:isb_track_progress_color="@color/colorPrimary"
            app:isb_track_progress_size="5dp"
            app:isb_indicator_content_layout="@layout/seekbar_custom_indicator"
            app:isb_indicator_text_color="@color/colorGrey"
            app:isb_show_indicator="custom"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ivInAllListContainer"
        android:layout_width="@dimen/size_cap_status_button_width"
        android:layout_height="@dimen/size_cap_status_button_height"
        android:visibility="visible"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        card_view:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/powerRfidContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivWithRfidContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivAllList"
                android:src="@drawable/ic_list"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvAllListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_list"
                style="@style/TextStyle_Small_Bold_Grey"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/ivAllList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAllList"
                style="@style/TextStyle_Standart_Bold_Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAllListName"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ivWithRfidContainer"
        android:layout_width="@dimen/size_cap_status_button_width"
        android:layout_height="@dimen/size_cap_status_button_height"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        card_view:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/powerRfidContainer"
        app:layout_constraintStart_toEndOf="@+id/ivInAllListContainer"
        app:layout_constraintEnd_toStartOf="@+id/ivWithoutRfidContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivWithRfid"
                android:src="@drawable/ic_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvWithRfidName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/with_rfid"
                style="@style/TextStyle_Small_Bold_Grey"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/ivWithRfid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvWithRfid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/TextStyle_Standart_Bold_Accent"
                android:layout_margin="3dp"
                app:layout_constraintTop_toBottomOf="@+id/tvWithRfidName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ivWithoutRfidContainer"
        android:layout_width="@dimen/size_cap_status_button_width"
        android:layout_height="@dimen/size_cap_status_button_height"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        card_view:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/ivWithRfidContainer"
        app:layout_constraintTop_toBottomOf="@+id/powerRfidContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivWithoutRfid"
                android:src="@drawable/ic_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvWithoutRfidName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/without_rfid"
                style="@style/TextStyle_Small_Bold_Grey"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/ivWithoutRfid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvWithoutRfid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/TextStyle_Standart_Bold_Accent"
                android:layout_margin="3dp"
                app:layout_constraintTop_toBottomOf="@+id/tvWithoutRfidName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ua.com.expertsolution.chesva.ui.widgets.FilteredInstantAutoComplete
        android:id="@+id/findBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        custom:hint="@string/box"
        custom:drawableRight="@drawable/ic_close"
        app:layout_constraintTop_toBottomOf="@+id/ivInAllListContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnStartStopRfid"
        style="@style/Button2Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/start_rfid"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/findBox"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/rfidResultContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="false"
        card_view:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartStopRfid"
        app:layout_constraintTop_toTopOf="@+id/btnStartStopRfid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStartStopRfid">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRfidResultName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:text="@string/rfid"
                style="@style/TextStyle_Small_Grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvRfidResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/TextStyle_Small_Bold_Accent"
                app:layout_constraintTop_toBottomOf="@+id/tvRfidResultName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/btnStartStopRfid"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar_load">
        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/pbLoadList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progress_drawable"
            android:layout_marginBottom="@dimen/geiger_margin_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>